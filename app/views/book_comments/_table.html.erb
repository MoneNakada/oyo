<table>
  <% book_comments.each do |comment| %>
    <tr>
      <td><%= image_tag comment.user.get_profile_image("100x100") %></td>
      <td><%= comment.body %></td>
      <% if current_user == comment.user %>
        <td><%= link_to "削除", book_comment_path(comment), method: :delete, class: "btn btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
