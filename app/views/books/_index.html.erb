<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image('50x50') %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% book.tags.each do |tag| %>
            <%= form_with url: search_by_tagname_path, method: :post do |f| %>
              <%= f.hidden_field :tag_name, :value => tag.name %>
              <%= f.submit tag.name, class: "btn btn-link link_primary" %>
            <% end %>
            <br />
          <% end %>
        </td>
        <td class= "table__favorite_<%= book.id %>">
          <%= render 'favorites/book', book: book, user: current_user %>
        </td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td><div id="star-rate<%= book.id %>"></div></td>
        <script>
          $('#star-rate<%= book.id %>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= book.star %>,
          });
        </script>
      </tr>
    <% end %>
  </tbody>
</table>