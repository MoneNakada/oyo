<table class='table'>
  <tr><%= image_tag user.get_profile_image("100x100") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー中</th>
    <th>
      <%= link_to followings_user_path(user) do %>
        <%= user.followings.count %>人
      <% end %>
    </th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th>
      <%= link_to followers_user_path(user) do %>
        <%= user.followers.count %>人
      <% end %>
    </th>
  </tr>
  <% unless current_user == user %>
    <tr>
      <th>
        <% if current_user.following?(user) %>
          <% link_to "フォロー外す", user_relationships_path(user), method: :delete, class:"btn btn-default" %>
        <% else %>
          <% link_to "フォローする", user_relationships_path(user), method: :post, class:"btn btn-primary" %>
        <% end %>
      </th>
    </tr>
  <% end %>
</table>

<div class='row'>
  <% if current_user == user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% elsif current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
    <% if current_user.followed?(user) %>
      <%= link_to "chatを始める", chat_path(user.id) %>
    <% end %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
</div>